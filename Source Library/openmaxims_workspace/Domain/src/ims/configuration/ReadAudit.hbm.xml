<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping
	PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="ims.configuration.ReadAudit" table="appreadaudit" lazy="false" >
		<id name="id" access="field" type="integer" unsaved-value="null">
			<!-- workaround for DDL creation (works for Sybase only) -->
			<column name="id" sql-type="numeric(10,0)"/>
			<generator class="native"/>
		</id>
		<property name="auditDateTime" type="timestamp" access="field" index='read_datetime_idx'>
			<column name="aud_datetime" />
		</property>	
		<property name="auditUser" type="string" access="field" index='read_datetime_idx' >
			<column name="aud_user" length="30" />
		</property>	
		<property name="auditUserLocation" type="integer" access="field" >
			<column name="aud_userloc" />
		</property>		
		<property name="auditHost" type="string" access="field" >
			<column name="aud_host" length="50" />
		</property>				
		<property name="auditAction" type="string" access="field" >
			<column name="aud_action" length="20" />
		</property>
		<property name="patientId" type="integer" access="field" index='read_patient_idx'>
			<column name="patient_id" />
		</property>		
	</class>
</hibernate-mapping>